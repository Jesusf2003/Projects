<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="JPAUdemy">
    	
    	<!-- Define la clase para Hibernate que implementa JPA. -->
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	
    	<!-- Define las clases que seran mappeadas al configurarse la conexion a la base de datos. -->
    	<class>com.user.project.entity.Disquera</class>
    	<class>com.user.project.entity.Genero</class>
    	<class>com.user.project.entity.SubGenero</class>
    	
    	<properties>
    		<property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
    		<property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost;databaseName=dbJPA"/>
    		<property name="javax.persistence.jdbc.user" value="sa"/>
    		<property name="javax.persistence.jdbc.password" value="Administrador2021"/>
    		
    		<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.show_sql" value="true"/>
    	</properties>
    	
    </persistence-unit>
    
</persistence>